{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Feedback API",
		"description": "API Description"
	},
	"host": "localhost:3012",
	"basePath": "/",
	"schemes": ["http"],
	"paths": {
		"/feedbacks": {
			"get": {
				"summary": "Tüm feedbackleri getirir",
				"responses": {
					"200": {
						"description": "Tüm feedbackleri listeleyen endpoint",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Item"
							}
						}
					}
				},
				"parameters": [
					{
						"name": "x-feedback-token",
						"in": "header",
						"description": "Uygulamayı kullananın siz olduğunu doğrulamak için gereklidir.",
						"required": true,
						"type": "string"
					}
				]
			},
			"post": {
				"summary": "Yeni feedback ekler",
				"parameters": [
					{
						"in": "body",
						"name": "body",
						"description": "Item object",
						"required": true,
						"schema": {
							"$ref": "#/definitions/PostItem"
						}
					},
					{
						"name": "Authorization",
						"in": "header",
						"description": "Hangi kullanıcının login olduğunu belirlemek için kullanılır (Bearer token)",
						"required": true,
						"type": "string"
					},
					{
						"name": "x-feedback-token",
						"in": "header",
						"description": "Uygulamayı kullananın siz olduğunu doğrulamak için gereklidir.",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"201": {
						"description": "Item created"
					}
				}
			}
		},
		"/feedbacks/{slug}": {
			"get": {
				"summary": "Slug değerine göre feedback getirir",
				"parameters": [
					{
						"name": "slug",
						"in": "path",
						"required": true,
						"type": "string"
					},
					{
						"name": "x-feedback-token",
						"in": "header",
						"description": "Uygulamayı kullananın siz olduğunu doğrulamak için gereklidir.",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "Item details",
						"schema": {
							"$ref": "#/definitions/Item"
						}
					}
				}
			},
			"put": {
				"summary": "Bir feedbacki günceller",
				"parameters": [
					{
						"name": "slug",
						"in": "path",
						"required": true,
						"type": "string"
					},
					{
						"name": "Authorization",
						"in": "header",
						"description": "Hangi kullanıcının login olduğunu belirlemek için kullanılır (Bearer token)",
						"required": true,
						"type": "string"
					},
					{
						"name": "x-feedback-token",
						"in": "header",
						"description": "Uygulamayı kullananın siz olduğunu doğrulamak için gereklidir.",
						"required": true,
						"type": "string"
					},
					{
						"in": "body",
						"name": "body",
						"description": "Updated item object",
						"required": true,
						"schema": {
							"$ref": "#/definitions/PostItem"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Item updated"
					}
				}
			},
			"delete": {
				"summary": "Feedbacki siler",
				"parameters": [
					{
						"name": "slug",
						"in": "path",
						"required": true,
						"type": "string"
					},
					{
						"name": "x-feedback-token",
						"in": "header",
						"description": "Uygulamayı kullananın siz olduğunu doğrulamak için gereklidir.",
						"required": true,
						"type": "string"
					},
					{
						"name": "Authorization",
						"in": "header",
						"description": "Hangi kullanıcının login olduğunu belirlemek için kullanılır (Bearer token)",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "Item deleted"
					}
				}
			}
		}
	},
	"definitions": {
		"Item": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"title": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"slug": {
					"type": "string"
				},
				"userId": {
					"type": "number"
				},
				"categoryId": {
					"type": "number"
				},
				"createdAt": {
					"type": "string"
				},
				"updatedAt": {
					"type": "string"
				},
				"user": {
					"type": "object",
					"properties": {
						"id": {
							"type": "number"
						},
						"name": {
							"type": "string"
						},
						"email": {
							"type": "string"
						}
					}
				},
				"category": {
					"type": "object",
					"properties": {
						"id": {
							"type": "number"
						},
						"name": {
							"type": "string"
						},
						"slug": {
							"type": "string"
						},
						"createdAt": {
							"type": "string"
						},
						"updatedAt": {
							"type": "string"
						}
					}
				}
			}
		},
		"PostItem": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"category": {
					"type": "number"
				}
			}
		}
	}
